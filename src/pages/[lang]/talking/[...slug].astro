                  <ul class="list-disc list-inside text-[var(--foreground)]">
                    {
                      talking.data.references.map(reference => {
                        if (!reference.title && !reference.url) {
                          return null
                        }
                        return <li>
                          <a href={reference.url} target="_blank">{reference.title || reference.url}</a>
                          </li>
                      })
                    }
