---
import { cn } from '@/utils/utils'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {}

const props = Astro.props as Props
---

<div
  class={cn(
    "p-4 pr-[calc(1rem+4px)] border-s-4 rounded-lg shadow-sm border-gray-300 bg-gray-100 dark:border-gray-500 dark:bg-gray-800 text-[var(--foreground)]",
    props.class
  )}
  {...props}
>
  <slot />
</div>
